<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.asistenciardm.fragmentosMenu.ModificarAsistenciaFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Familia: "
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/tvFamilia"
        android:textAlignment="center"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@android:color/black"/>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Hijos:"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvListaHijos"></ListView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:padding="10dp"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    android:text="Cambiar estado a:"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spEstado"></Spinner>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/btActualizar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Actualizar"
    android:textAlignment="center"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:textSize="40dp"
    android:textColor="@android:color/white"
    android:background="@color/colorAccent"/>
</FrameLayout>
</LinearLayout>
